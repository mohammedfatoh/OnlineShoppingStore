@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h5 class="display-3"><strong>Welcome,</strong></h5>
        <p class="display-4"><strong>SALE UPTO 50%</strong></p>
        <p class="display-4">&nbsp;</p>
        <a asp-action="Index" asp-controller="Customer" class="btn btn-warning btn-lg float-right">SHOP NOW!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

        @foreach(var product in Model)
       {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="data:image/*;base64,@(Convert.ToBase64String(product.Image))" alt="">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        @product.Description
                    </p>
                </div>
                <div class="card-footer"> 
                    <strong>@product.Price</strong> &nbsp;
                    <a  asp-controller="Customer" asp-action="AddToCart"  asp-route-productId=@product.Id class="btn btn-primary btn-outline-dark"><i class="fa fa-cart-plus "></i> Add To
                        Cart</a>
                </div>
            </div>
        </div>
      }

    </div>

</div>

